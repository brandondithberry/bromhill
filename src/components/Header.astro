---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
	</nav>
</header>
<style>
	header {
		margin: 0 auto;
		padding: 1em 2em;
		background: none;
		text-align: center;
	}
	h2 {
		margin: 0 auto;
		font-size: 2em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: rgba(255,255,255,0.5);
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		text-decoration: none;
	}
	nav a.active, nav a:hover {
		color: rgba(255,255,255,0.5);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
